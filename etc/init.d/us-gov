#!/bin/bash
#copy this file into /etc/init.d/
#update-rc.d curex-fcgi defaults

USER=root

DAEMON="/usr/local/bin/us-gov"
DAEMON_ARGS="-ds"
PIDFILE="/var/run/us-gov.pid"
NAME="us-gov"

RETVAL=0

start() {
      echo -n "Starting us-gov: "
# 	  echo "/sbin/start-stop-daemon --quiet --start --background --chuid "$USER" --exec /usr/bin/env $PROG"

/sbin/start-stop-daemon --start  --background \
  --pidfile $PIDFILE --make-pidfile \
  --chuid $USER \
  --startas /usr/bin/pipexec -- -k \
   -- [ D $DAEMON $DAEMON_ARGS ] [ L /usr/bin/logger --tag $NAME ] '{D:2>D:1}' '{D:1>L:0}'


      RETVAL=$?
}

stop() {
      echo -n "Stopping us-gov: "
      killall -q -w -u $USER us-gov
      RETVAL=$?
}

case "$1" in
    start)
      start
  ;;
    stop)
      stop
  ;;
    restart)
      stop
      start
  ;;
    *)
      echo "Usage: us-gov {start|stop|restart}"
      exit 1
  ;;
esac
echo "$RETVAL"
exit $RETVAL

