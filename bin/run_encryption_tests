#!/bin/bash

home=`mktemp -d`
echo "home dir is $home"

#---gov---
LD_LIBRARY_PATH=gov govd/us-gov -d -home $home -genesis 127.0.0.1
if [ $? -eq 0 ]; then
    echo "gov-> PASS"
 
else
    echo "gov-> FAIL"
	exit 1;

fi

ls $home


LD_LIBRARY_PATH=gov govd/us-gov -d -home $home -p 16672 2>&1 >/dev/null &
sleep 1
pid=`ps ax | grep gov | grep -v grep | awk '{print $1}'`
echo "pid=$pid"



#---wallet---                                  wallet port  backend port
LD_LIBRARY_PATH=wallet:gov walletd/us-wallet -home $home -d -wp 16673 -bp 16672 2>&1 >/dev/null &
sleep 1
pid2=`ps ax | grep wallet | grep -v grep | awk '{print $1}'`
echo "pid2=$pid2"
#exit 0



