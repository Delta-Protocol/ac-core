#!/bin/sh

rm -rf secp256k1

git clone https://github.com/bitcoin-core/secp256k1
cd secp256k1
./autogen.sh
./configure --enable-experimental --enable-module-ecdh --disable-dependency-tracking --enable-benchmark=false  --enable-coverage=false --enable-tests=false --enable-openssl-tests=false --enable-exhaustive-tests=false
make
./tests && (exit 1)
make install && (exit 1)
cd ..
rm -r secp256k1
echo "done"
