#!/bin/bash


#-------------------------start()-----------------------|
start() {

	home=`mktemp -d`
	echo "home dir is $home"

	#---govd---
	LD_LIBRARY_PATH=gov govd/us-govd -d -home $home -genesis 127.0.0.1
       
      if [ $? -eq 0 ]; then
    	echo "govd-> PASS"
	else
    	echo "govd-> FAIL"
	exit 1;
     fi

 ls $home

#-------

 g_port=16671
 w_port=16673

 for value in {1..3}
 do                                                                 #
   LD_LIBRARY_PATH=gov govd/us-govd -d -home $home -p $g_port 2>&1 >/dev/null &
   sleep 1
   pid_g=`ps ax | grep govd | grep -v grep | awk '{print $1}' | sort | tail -n1`
   echo "--------------------------------------------------"
   echo "gov pid= $pid_g    |   node port = $g_port "
   echo "--------------------------------------------------"
	for value in {1..3}
	do                                                                          #         #
		LD_LIBRARY_PATH=wallet:gov walletd/us-walletd -home $home -d -wp $w_port -bp $g_port 2>&1 >/dev/null &
		sleep 1
		pid_w=`ps ax | grep walletd | grep -v grep | awk '{print $1}' | sort | tail -n1`
		echo "wallet pid= $pid_w | ..:::wallet port--> $w_port :::.."
		let w_port++ 
	done

 let g_port--
 done

}





#-----------------------stop()-----------------------|
stop() {
	killall us-walletd us-govd
}







#----------------------case------------------------------------------|
case "$1" in   
	start)   start ;;  
	stop)    stop ;;
	restart) stop; start ;;
    	*) echo "usage: $0 start|stop|restart" >&2
       exit 1
       ;;
esac







