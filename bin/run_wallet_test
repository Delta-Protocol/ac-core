#!/bin/bash

home=`mktemp -d`
echo "home dir is $home"

#---govd---
LD_LIBRARY_PATH=gov govd/us-govd -d -home $home -genesis 127.0.0.1
if [ $? -eq 0 ]; then
    echo "govd-> PASS"
 
else
    echo "govd-> FAIL"
	exit 1;

fi

ls $home


LD_LIBRARY_PATH=gov govd/us-govd -d -home $home -p 46000 2>&1 >/dev/null &
sleep 1
pid=`ps ax | grep govd | grep -v grep | awk '{print $1}'`
echo "pid=$pid"



#---walletd---                                  wallet port  backend port
LD_LIBRARY_PATH=wallet:gov walletd/us-walletd -home $home -d -wp 46001 -bp 46000 2>&1 >/dev/null &
sleep 1
pid2=`ps ax | grep walletd | grep -v grep | awk '{print $1}'`
echo "pid2=$pid2"
#exit 0


#---Run-Test---
#LD_LIBRARY_PATH=wallet:gov walletd/us-walletd -d -wp 46001 b
#

exit 0


a=`LD_LIBRARY_PATH=gov test/unit_tests 2>&1 >/dev/null`
if [ $? -eq 0 ]; then
    echo "PASS"
    exit 0
fi
echo "FAIL"
LD_LIBRARY_PATH=gov gdb -batch -ex "run" -ex "bt" test/unit_tests 2>&1 #| tail -n-3 | cut -d " " -f 4- | tac | nl -n ln | tac | sed "s/^/#/"

if [[ ${home:0:4} = "/tmp" ]] 
then
rm -r $home
fi

exit 1

